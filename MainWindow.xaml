<Window x:Class="Plateforme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Launcher - Demande de Vincent" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Définir les lignes du Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre + bouton refresh -->
            <RowDefinition Height="*"/>
            <!-- Liste des projets -->
            <RowDefinition Height="200"/>
            <!-- Console/Logs -->
        </Grid.RowDefinitions>

        <!-- ROW 0 : Header avec titre et bouton refresh -->
        <Border Grid.Row="0" Background="#2d2d30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Projets GitHub - Demande-de-Vincent-692" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                       Content="🔄 Rafraîchir" 
                       Padding="15,8"
                       FontSize="14"
                       Click="RefreshButton_Click"/>
            </Grid>
        </Border>

        <!-- ROW 1 : Liste des projets (ScrollViewer + WrapPanel) -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     Background="#f5f5f5">
            <WrapPanel x:Name="ProjectsPanel" 
                      Orientation="Horizontal"
                      HorizontalAlignment="Left"/>
        </ScrollViewer>

        <!-- ROW 2 : Console de logs -->
        <Border Grid.Row="2" 
               BorderBrush="#cccccc" 
               BorderThickness="0,1,0,0"
               Background="#1e1e1e">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="📋 Console" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Padding="10,5"
                          Background="#252526"/>

                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogsTextBox"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            Background="#1e1e1e"
                            Foreground="#d4d4d4"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="12"
                            Padding="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</Window>