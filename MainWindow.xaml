<Window x:Class="Plateforme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Launcher" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style pour les cartes de projets -->
        <Style x:Key="ProjectCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.25" Color="#4F46E5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les boutons du header -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6366F1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton de notification -->
        <Style x:Key="NotificationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5B5FC7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animation pour les notifications -->
        <Storyboard x:Key="NotificationSlideIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,20,20,-100" To="0,0,20,20" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Background avec lÃ©gÃ¨re texture -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F7FA" Offset="0"/>
                <GradientStop Color="#E8EBF0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header moderne avec gradient -->
        <Border Grid.Row="0" Padding="30,25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#6366F1" Offset="0"/>
                    <GradientStop Color="#8B5CF6" Offset="0.5"/>
                    <GradientStop Color="#EC4899" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3" Color="#4F46E5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Project Launcher"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Demande-de-Vincent-692"
                              FontSize="14"
                              Foreground="#E0E7FF"
                              Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Bouton de notification avec badge -->
                    <Grid Margin="0,0,15,0">
                        <Button x:Name="NotificationButton"
                               Content="ðŸ””"
                               Style="{StaticResource NotificationButtonStyle}"
                               Click="ToggleNotification_Click"/>

                        <!-- Badge de compteur sur le bouton -->
                        <Border x:Name="NotificationBadge"
                                Background="#EF4444"
                                CornerRadius="10"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-5,-5,0"
                                Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.5" Color="#EF4444"/>
                            </Border.Effect>
                            <TextBlock x:Name="NotificationCount"
                                      Text="0"
                                      Foreground="White"
                                      FontSize="10"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <Button Content="â†» Refresh"
                           Style="{StaticResource HeaderButtonStyle}"
                           Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zone principale avec les projets -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="20">
            <StackPanel>
                <!-- Titre de section -->
                <TextBlock Text="Your Repositories"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="#1F2937"
                          Margin="15,10,0,20"/>

                <!-- Conteneur des cartes de projets -->
                <WrapPanel x:Name="ProjectsPanel"
                          Orientation="Horizontal"
                          HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Zone de notifications en overlay (en bas Ã  droite) -->
        <Border x:Name="NotificationPanel"
                Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="20"
                MaxWidth="400"
                MaxHeight="500"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header de la notification -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Activity"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#1F2937"/>

                    <Button Grid.Column="1"
                           Content="Ã—"
                           FontSize="20"
                           Background="Transparent"
                           Foreground="#6B7280"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CloseNotification_Click"
                           Padding="5"/>
                </Grid>

                <!-- Liste des logs -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="NotificationTextBlock"
                              TextWrapping="Wrap"
                              FontSize="13"
                              Foreground="#374151"
                              LineHeight="20"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
