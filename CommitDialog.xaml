<Window x:Class="Plateforme.CommitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commit Changes"
        Height="600"
        Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White" CornerRadius="12" BorderBrush="#CCCCCC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="12,12,0,0" Padding="25,20">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="ðŸ’¾ Commit - Push Changes"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="FileCountText"
                                   Text="0 files changed"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
                <StackPanel>
                    <!-- Changed Files Section -->
                    <TextBlock Text="Changed Files"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,10"/>

                    <Border Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            MaxHeight="200"
                            Margin="0,0,0,20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="FilesList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,6" Background="White" CornerRadius="4" Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="#DBEAFE"
                                                        CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="0,0,10,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DisplayStatus}"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="#1E40AF"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding FilePath}"
                                                           FontSize="13"
                                                           Foreground="#374151"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Commit Title -->
                    <TextBlock Text="Commit Title"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="CommitTitleTextBox"
                             FontSize="14"
                             Padding="12,10"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Background="White"
                             Margin="0,0,0,20"
                             MaxLength="72"/>

                    <!-- Commit Description -->
                    <TextBlock Text="Description (optional)"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="CommitDescriptionTextBox"
                             FontSize="13"
                             Padding="12,10"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Background="White"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="100"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer with buttons -->
            <Border Grid.Row="2" Padding="25,15" Background="#FAFAFA" CornerRadius="0,0,12,12" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton"
                            Grid.Column="1"
                            Content="Cancel"
                            Click="CancelButton_Click"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            FontSize="14"
                            Background="Transparent"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CommitButton"
                            Grid.Column="2"
                            Content="Commit - Push"
                            Click="CommitButton_Click"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#22C55E" Offset="0"/>
                                            <GradientStop Color="#16A34A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#16A34A" Offset="0"/>
                                                    <GradientStop Color="#15803D" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
