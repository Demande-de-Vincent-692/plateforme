<Window x:Class="Plateforme.CommitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commit Changes"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F6F8FA">
    <Window.Resources>
        <!-- Style pour le bouton Commit -->
        <Style x:Key="CommitButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#22C55E" Offset="0"/>
                        <GradientStop Color="#16A34A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#16A34A" Offset="0"/>
                                <GradientStop Color="#15803D" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Cancel -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Commit Changes" FontSize="20" FontWeight="SemiBold" Foreground="#1F2937"/>
                <TextBlock x:Name="FileCountText" Text="0 file(s) changed" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Files List -->
        <Border Grid.Row="1" Background="White" Margin="20,20,20,0" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="FilesList" Padding="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" Margin="0,2" Background="#F9FAFB" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="0"
                                            Background="#3B82F6"
                                            CornerRadius="3"
                                            Padding="6,3"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayStatus}"
                                                  FontSize="10"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                    </Border>

                                    <!-- File Path -->
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding FilePath}"
                                              FontSize="12"
                                              Foreground="#374151"
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Commit Form -->
        <Border Grid.Row="2" Background="White" Margin="20,20,20,0" Padding="20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel>
                <!-- Commit Title -->
                <TextBlock Text="Commit Title *" FontSize="12" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                <TextBox x:Name="CommitTitleTextBox"
                        MaxLength="72"
                        Padding="12,10"
                        FontSize="14"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Background="White"
                        Foreground="#1F2937"/>

                <!-- Character Count -->
                <TextBlock x:Name="CharCountText" Text="0/72 characters" FontSize="10" Foreground="#6B7280" Margin="0,4,0,0" HorizontalAlignment="Right"/>

                <!-- Commit Description -->
                <TextBlock Text="Description (optional)" FontSize="12" FontWeight="SemiBold" Foreground="#374151" Margin="0,15,0,8"/>
                <TextBox x:Name="CommitDescriptionTextBox"
                        Height="80"
                        Padding="12,10"
                        FontSize="14"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Background="White"
                        Foreground="#1F2937"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#F6F8FA" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Style="{StaticResource CancelButtonStyle}" Click="CancelButton_Click" Margin="0,0,10,0" MinWidth="100"/>
                <Button x:Name="CommitButton" Content="Commit &amp; Push" Style="{StaticResource CommitButtonStyle}" Click="CommitButton_Click" MinWidth="140"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
