<Window x:Class="Plateforme.IDESelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir l'Ã©diteur"
        Height="340"
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Style pour les boutons IDE -->
        <Style x:Key="IDEButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Annuler -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" BorderBrush="#CCCCCC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="12,12,0,0" Padding="20,15">
                <TextBlock Text="Choisir l'Ã©diteur de code"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#333333"/>
            </Border>

            <!-- Buttons Container -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Visual Studio Code Button -->
                <Button x:Name="VSCodeButton"
                        Style="{StaticResource IDEButtonStyle}"
                        Click="VSCodeButton_Click"
                        Width="160"
                        Height="120">
                    <StackPanel>
                        <Image Source="/img/vscode.png" Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Visual Studio Code" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center"/>
                        <TextBlock Text="Code" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,-5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Visual Studio Button -->
                <Button x:Name="VisualStudioButton"
                        Style="{StaticResource IDEButtonStyle}"
                        Click="VisualStudioButton_Click"
                        Width="160"
                        Height="120">
                    <StackPanel>
                        <Image Source="/img/visual-studio.png" Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Visual Studio" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center"/>
                        <TextBlock Text="(IDE)" FontSize="12" Foreground="#666666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- Checkbox for dependencies installation -->
            <Border Grid.Row="2" Padding="20,10" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                <CheckBox x:Name="InstallDependenciesCheckBox"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Install dependencies (setup.cmd)"
                                      FontSize="13"
                                      Foreground="#333333"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Padding="15" Background="#FAFAFA" CornerRadius="0,0,12,12">
                <Button x:Name="CancelButton"
                        Content="Annuler"
                        Style="{StaticResource CancelButtonStyle}"
                        Click="CancelButton_Click"
                        HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
